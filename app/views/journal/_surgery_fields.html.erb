  <fieldset>
    <div class="row-fluid">
      <div class="span3">
        <p><b>Date of surgery:</b></p>
      </div>
      <div class="span6">
        <%= f.date_select :surgerydate, {:start_year => 1970, :end_year => Time.now.year, :include_blank=> true, order: [:day, :month, :year]}, {:class => "date_generic"} %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span3">
        <p>Type of surgery:</p>
      </div>
      <div class="span4">
        <%= f.select :surgerytype, options_from_collection_for_select(SurgeryType.all, :id,:surgerytype_combo), :include_blank => true %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span3">
        <p>Radicality:</p>
      </div>
      <div class="span4">
        <%= f.select :surgeryradicality, options_from_collection_for_select(SurgeryRadicality.all, :id,:surgeryradicality_combo), :include_blank => true %>    </div>
    </div>
    <div class="row-fluid">
      <div class="span3">
        <p>Complete removal of hormone producing organ?</p>
      </div>
      <div class="span2">
        <%= f.select :surgerycompleteremovalorgan, options_from_collection_for_select(NoYes.all, :id,:noyes_combo), :include_blank => true %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span3">
        <p>Specify:</p>
      </div>
      <div class="span4">
        <%= f.select :surgerycompleteremovalorganspec, options_from_collection_for_select(SurgeryCompleteRemovalOrganSpec.all, :id,:surgerycompleteremovalorganspec_combo), :include_blank => true %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span2 offset3">
        <p>Laterailty:</p>
      </div>
      <div class="span3">
        <%= f.select :surgerycompleteremovalorganlaterality, options_from_collection_for_select(SurgeryCompleteRemovalOrganLaterality.all, :id,:surgerycompleteremovalorganlaterality_combo), :include_blank => true %>
      </div>
    </div>
    <%= f.hidden_field :_destroy %>
    <%= link_to "Remove surgery", '#', class: "remove_fields" %>
  </fieldset>