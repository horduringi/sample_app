  <fieldset>
    <div class="row-fluid">
      <div class="span3">
        <p>Body surface (m<sup>2</sup>) <b>at diagnosis</b>:</p>
      </div>
      <div class="span2">
        <%= f.number_field :bodysurface, {step: 0.01, min: 0} %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span3">
        <p>Date at measurement:</p>
      </div>
      <div class="span6">
        <%= f.date_select :measurementdate, {:start_year => 1970, :end_year => Time.now.year, :include_blank=> true, order: [:day, :month, :year]}, {:class => "date_generic"} %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span3">
        <p>Weight:</p>
      </div>
      <div class="span2">
        <%= f.number_field :weight, {step: 0.1, min: 0} %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span3">
        <p>Height:</p>
      </div>
      <div class="span2">
        <%= f.number_field :height, {step: 0.1, min: 0} %>
      </div>
    </div>
    <div class="row-fluid">
    <div class="span3">
        <p>Was body surface estimated?</p>
    </div>
    <div class="span2">
        <%= f.select :estimated, options_from_collection_for_select(NoYes.all, :id,:noyes_combo), :include_blank => true %> 
    </div>
  </div>
    <%= f.hidden_field :_destroy %>
    <%= link_to "Remove chemotherapy year", '#', class: "remove_fields" %>
  </fieldset>