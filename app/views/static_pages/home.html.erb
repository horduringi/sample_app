
  <% if signed_in? %>
<div ng-controller="MyCtrl" ng-app="myApp">
  <div class="row-fluid">
    <div class="span6" align="center">
      <h2 style="text-align:center">Select an ALiCCS-study number</h2>
      <input align="center" placeholder="Search..." ng-model="gridOptions.filterOptions.filterText" style="width:200px;"/>
      <div class="gridStyle" ng-grid="gridOptions"></div>
      Total: {{myDataNotDone.length}}
    </div>
    <div class="span6" align="center">
      <h2 style="text-align:center">Done</h2>
      <input align="center" placeholder="Search..." ng-model="gridOptionsDone.filterOptions.filterText" style="width:200px;"/>
      <div class="gridStyle" ng-grid="gridOptionsDone"></div>
      Total: {{myDataDone.length}}
    </div  
  </div>
  <div class="row-fluid">
    <br>
    <br>
    <div class="progress span10 offset1">
      <div class="bar" style="width:<%= @progress %>%">
      </div>

    </div>
  </div>
</div>

  <% else %>
  
  <%= image_tag "ALiCCS.JPG" %>
  

