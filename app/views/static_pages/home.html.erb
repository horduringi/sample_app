
  <% if signed_in? %>
<h2>Select an ALiCCS-study number</h2>
<div class="row" ng-controller="MyCtrl" ng-app="myApp">
 <div class="gridStyle" ng-grid="gridOptions"></div>
</div>
  <% else %>
<div class="center hero-unit">
  <h1>Welcome to the ALiCCS App</h1>

  <h2>
    This is the home page of the ALiCCS journal database.
  </h2>
</div>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
    <% end %>

    <p>New user? Please contact Thorgerdur (thorgud@cancer.dk)</p>
  </div>
</div>
  <% end %>
