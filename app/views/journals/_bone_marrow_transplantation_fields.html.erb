<!--Færa yfir í BoneMarrowTransplantations-->
<fieldset>
  <div class="row-fluid">
    <div class="span3">
      <p>Date of transplantation:</p>
    </div>
    <div class="span6">
      <%= f.number_field :transplantationdate_day, {placeholder: "day", :class => "date_generic"} %>
      <%= f.number_field :transplantationdate_month, {placeholder: "month", :class => "date_generic"} %>
      <%= f.number_field :transplantationdate_year, {placeholder: "year", :class => "date_generic"} %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3">
      <p>Autologous</p>
    </div>
    <div class="span2">
      <%= f.select :autologous, options_from_collection_for_select(NoYes.all, :seq,:noyes_combo, ), :include_blank => true %> 
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3">
      <p>Allogeneic</p>
    </div>
    <div class="span2">
      <%= f.select :allogeneic, options_from_collection_for_select(NoYes.all, :seq,:noyes_combo), :include_blank => true %> 
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3">
      <p>Donor</p>
    </div>
    <div class="span2">
      <%= f.select :donor, options_from_collection_for_select(Donor.all, :seq,:donor_combo), :include_blank => true %> 
    </div>
  </div>  
  <div class="row-fluid">
    <div class="span3">
      <p>Source</p>
    </div>
    <div class="span2">
      <%= f.select :source, options_from_collection_for_select(Source.all, :seq,:source_combo), :include_blank => true %> 
    </div>
  </div>
  <div class="row-fluid">
    <div class="span11 offset1">
      <b>Conditioning regimes:</b>
      <br>
      <b>Radiotherapy</b>
      <p class="infoSmallRed">Please note. Radiotherapy given in relation to BMT is registered here, NOT at page 4.</p>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset1">
      <p>Total body irradiation (TBI):</p>
    </div>
    <div class="span2">
      <%= f.select :totalbodyirritation, options_from_collection_for_select(NoYes.all, :seq,:noyes_combo), :include_blank => true %> 
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset1">
      <p>Date of start:</p>
    </div>
    <div class="span8">
      <%= f.number_field :startdate_day, {placeholder: "day", :class => "date_generic"} %>
      <%= f.number_field :startdate_month, {placeholder: "month", :class => "date_generic"} %>
      <%= f.number_field :startdate_year, {placeholder: "year", :class => "date_generic"} %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset1">
      <p>Date of completion:</p>
    </div>
    <div class="span8">
      <%= f.number_field :completiondate_day, {placeholder: "day", :class => "date_generic"} %>
      <%= f.number_field :completiondate_month, {placeholder: "month", :class => "date_generic"} %>
      <%= f.number_field :completiondate_year, {placeholder: "year", :class => "date_generic"} %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset1">
      <p>Radiotherapy records copied:</p>
    </div>
    <div class="span2">
      <%= f.select :radiotherapyrecordscopied, options_from_collection_for_select(NoYes.all, :seq,:noyes_combo), :include_blank => true %>
    </div>
  </div>
  <br>
  <div class="row-fluid">
    <div class="span3 offset1">
      <b>Chemotherapy (conditioning)</b>
    </div>
    <div class="span2">
      <%= f.select :chemotherapy, options_from_collection_for_select(NoYes.all, :seq,:noyes_combo), :include_blank => true %>
    </div>
  </div>
  <div class="row-fluid">
    <p class="infoSmallRed offset1">If yes - please fill out information on conditioning chemotherapy below.</p>
  </div>
  <div class="row-fluid">
    <div class="span3 offset1">
      <p>Date of initiation:</p>
    </div>
    <div class="span8">
      <%= f.number_field :chemotherapydateofinitiation_day, {placeholder: "day", :class => "date_generic"} %>
      <%= f.number_field :chemotherapydateofinitiation_month, {placeholder: "month", :class => "date_generic"} %>
      <%= f.number_field :chemotherapydateofinitiation_year, {placeholder: "year", :class => "date_generic"} %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset1">
      <p>Date of completion:</p>
    </div>
    <div class="span8">
      <%= f.number_field :chemotherapydateofcompletion_day, {placeholder: "day", :class => "date_generic"} %>
      <%= f.number_field :chemotherapydateofcompletion_month, {placeholder: "month", :class => "date_generic"} %>
      <%= f.number_field :chemotherapydateofcompletion_year, {placeholder: "year", :class => "date_generic"} %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset1">
      <p>Body surface (m<sup>2</sup>) <b>at conditioning</b>:</p>
    </div>
    <div class="span2">
      <%= f.number_field :bodysurfaceconditioning, {step: 0.01, min: 0} %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset1">
      <p>Weight at conditioning (kg):</p>
    </div>
    <div class="span2">
      <%= f.number_field :weightconditioning, {step: 0.1, min: 0} %>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span3 offset1">
      <p>Height at conditioning (cm):</p>
    </div>
    <div class="span2">
      <%= f.number_field :heightconditioning, {step: 0.1, min: 0} %>
    </div>
  </div>
  <table class="span12" style="position:relative;left:-55px">
    <thead>
      <th style="width:260px">Cytostatic drug (code - name)</th>
      <th style="width:200px">Total cumulated dose<br>(mg/m<sup>2</sup> or units/m<sup>2</sup>)</th>
      <th style="width:110px">Dose quality</th>
      <th style="width:260px">Anthracyclines: bolus vs. inf**</th>
      <th></th>
    </thead>
    <tbody>
  <%= f.fields_for :cytostatic_drug_given_bone_marrow do |builder| %>
    <%= render 'cytostatic_drug_given_bone_marrow_fields', f: builder %>
  <% end %>
    </tbody>
  </table>
  <p class="infoSmallRed">To add cytostatic drug please click "Add cytostatic drug given"</p>
  <%= link_to_add_fields "Add cytostatic drug given", f, :cytostatic_drug_given_bone_marrow %>

  <br>
  <br>
  <div class="span12">
    <p class=infoBox><b>In case of anthracycline use:</b><br>**Please give the average rate of administration for the <b>majority</b> of anthracycline doses given.<br>Anthracyclines: <b>doxorubicin</b>, Adriamycin&reg;, Adria&reg;; <b>daunorubicin</b>, Daunomycin&reg;, Cerubidine&reg;; <b>idarubicin</b>, Idamycin&reg;; mitoxantrone, Novantrone&reg;; <b>epirubicine</b><br>
    <br>

    <strong>Were cardioprotectants used?</strong>&nbsp;(Cardioprotectants: Cardioxane, Zinecard or DexrazOxane)
    <br>
    <span class="span2">
    <%= f.select :cardioprotectants, options_from_collection_for_select(NoYes.all, :seq,:noyes_combo), include_blank: true %>
  </span>
  
<br><br></p>
  </div>
  <div class="row-fluid">
    <div class="span8 offset4">
      <p class="infosmall">Cardioprotectants: Cardioxane, Zinecard or DexrazOxane</p>
    </div>
  </div>
  <div class="row-fluid">
    <div class="span4">
      <p><b>Treatment protocol (if applicable):</b></p>
      <p class="infoSmall" style="margin-top:-10px;">If the patient is treated (more or less) according to a protocol, please write the name of the protocol.</p>
    </div>
    <div class="span8">
        <%= f.text_area :treatmentprotocol, :cols => "30", :rows => "3" %>
    </div>
  </div>
    <br>
  <br>
  <%= f.hidden_field :_destroy %>
  <%= link_to "Remove bone marrow transplantation", '#', class: "remove_fields" %>
  <hr>
</fieldset>
