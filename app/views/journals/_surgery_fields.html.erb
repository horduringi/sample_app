  <fieldset>
    <div class="row-fluid">
      <div class="span3">
        <p><b>Date of surgery:</b></p>
      </div>
      <div class="span6">
        <%= f.number_field :surgerydate_day, {placeholder: "day", :class => "date_generic"} %>
        <%= f.number_field :surgerydate_month, {placeholder: "month", :class => "date_generic"} %>
        <%= f.number_field :surgerydate_year, {placeholder: "year", :class => "date_generic"} %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span3">
        <p>Type of surgery:</p>
      </div>
      <div class="span4">
        <%= f.select :surgerytype, options_from_collection_for_select(SurgeryType.all, :id,:surgerytype_combo), :include_blank => true %>
      </div>
    </div>
    <div class="row-fluid">
      <div class="span3">
        <p>Radicality:</p>
      </div>
      <div class="span4">
        <%= f.select :surgeryradicality, options_from_collection_for_select(SurgeryRadicality.all, :id,:surgeryradicality_combo), :include_blank => true %>    
      </div>
    </div>
    <div class="row-fluid">
      <div class="span3">
        <p>Complete removal of hormone producing organ?</p>
      </div>
      <div class="span4">
        <%= f.select :surgerycompleteremovalorganspec, options_from_collection_for_select(SurgeryCompleteRemovalOrganSpec.all, :id,:text), :include_blank => true %>
      </div>
    </div>
    <br>
    <%= f.hidden_field :_destroy %>
    <%= link_to "Remove surgery", '#', class: "remove_fields" %>
    <hr>
  </fieldset>